{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2017"],
    "forceConsistentCasingInFileNames": true,
    "newLine": "LF",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "./lib",
    "removeComments": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "target": "es6",
    "baseUrl": ".",
    "rootDir": "./src"
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.json"],
  "exclude": ["node_modules",]
}
